# dynamic-dynamodb log
<source>
  type tail
  pos_file /var/lib/fluentd/dynamic-dynamodb.pos
  format none
  path <%= "#{node[:supervisor][:log_dir]}/dynamic-dynamodb-stderr.log" %>
